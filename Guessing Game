    TriviaData[27][1] = "true";

    TriviaData[28][1] = "false";



    // Has question been asked

    // -- necessary because we are asking in random order

    TriviaData[0][2] = "no";

    TriviaData[1][2] = "no";

    TriviaData[2][2] = "no";

    TriviaData[3][2] = "no";

    TriviaData[4][2] = "no";

    TriviaData[5][2] = "no";

